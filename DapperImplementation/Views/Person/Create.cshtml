@model DapperImplementation.Data.Models.Person

@{
    Layout = "_Layout";
}

<h2>Create Person</h2>

<form asp-action="Create" asp-controller="Person" method="post">
    <div class="form-horizontal">
        <h4></h4>
        <hr/>
        
        <div class="form-group">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Name" class="form-control"/>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Surname" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Surname" class="form-control"/>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Phone" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Phone" class="form-control"/>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Password" class="col-md-2"></label>
            <div class="col-md-3">
                <input asp-for="Password" class="form-control"/>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-3">
                <input type="submit" value="Create Person" class="btn btn-default"/>
            </div>
        </div>

    </div>
</form>